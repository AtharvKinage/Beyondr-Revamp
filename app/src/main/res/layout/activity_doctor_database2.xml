<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progress"
            android:visibility="gone"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="300dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"

                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:src="@drawable/back" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:fontFamily="@font/nunito_bold"
                        android:text="Update Profile"
                        android:textColor="@color/black"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:fontFamily="@font/nunito_bold"
                        android:text="Qualifications"
                        android:textColor="#A2A2A2"
                        android:textSize="14dp"
                        android:textStyle="bold">

                    </TextView>


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/axiforma"
                    android:text="Education"
                    android:textColor="#B7B7B7"
                    android:textSize="15dp" />

                <LinearLayout
                    android:id="@+id/education"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycleredu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        tools:listitem="@layout/educationrecycler" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/axiforma"
                    android:text="Add Education"
                    android:textColor="#B7B7B7"
                    android:textSize="15dp" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/button_white">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:background="@null"
                        android:fontFamily="@font/axiforma"
                        android:text="School"
                        android:textColor="#CBCBCB"
                        android:textSize="12dp">

                    </TextView>

                    <EditText
                        android:id="@+id/name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:background="@null"
                        android:fontFamily="@font/axiforma"
                        android:minHeight="50dp"
                        android:text="Lovely Professional University"
                        android:textColor="#000000"
                        android:textColorHint="#000000"
                        android:textSize="17dp">

                    </EditText>

                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/button_white">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:background="@null"
                        android:fontFamily="@font/axiforma"
                        android:text="Field of study"
                        android:textColor="#CBCBCB"
                        android:textSize="12dp">

                    </TextView>

                    <EditText
                        android:id="@+id/fieldofstudy"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:background="@null"
                        android:fontFamily="@font/axiforma"
                        android:minHeight="50dp"
                        android:text="Lovely Professional University"
                        android:textColor="#000000"
                        android:textColorHint="#000000"
                        android:textSize="17dp">

                    </EditText>

                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <CheckBox
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="20dp"
                        android:button="@drawable/checkbutton">

                    </CheckBox>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/axiforma"
                        android:text="I am currently studying here"
                        android:textColor="#626262"
                        android:textSize="11dp">

                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/button_white">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:background="@null"
                            android:fontFamily="@font/axiforma"
                            android:text="Start Date"
                            android:textColor="#CBCBCB"
                            android:textSize="12dp">

                        </TextView>

                        <EditText
                            android:id="@+id/startdate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:background="@null"
                            android:fontFamily="@font/axiforma"
                            android:inputType="date"
                            android:minHeight="50dp"
                            android:text="11-09-1998"
                            android:textColor="#000000"
                            android:textColorHint="#000000"
                            android:textSize="17dp">

                        </EditText>

                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/button_white">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:background="@null"
                            android:fontFamily="@font/axiforma"
                            android:text="End Date"
                            android:textColor="#CBCBCB"
                            android:textSize="12dp">

                        </TextView>

                        <EditText
                            android:id="@+id/enddate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:background="@null"
                            android:fontFamily="@font/axiforma"
                            android:inputType="date"
                            android:minHeight="50dp"
                            android:text="11-09-1998"
                            android:textColor="#000000"
                            android:textColorHint="#000000"
                            android:textSize="17dp">

                        </EditText>

                    </FrameLayout>
                </LinearLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/button_white">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:background="@null"
                        android:fontFamily="@font/axiforma"
                        android:text="Grade (Optional)"
                        android:textColor="#CBCBCB"
                        android:textSize="12dp">

                    </TextView>

                    <EditText
                        android:id="@+id/grade"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:background="@null"
                        android:fontFamily="@font/axiforma"
                        android:minHeight="50dp"
                        android:text=""
                        android:textColor="#000000"
                        android:textColorHint="#000000"
                        android:textSize="17dp">

                    </EditText>

                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/button_white">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:background="@null"
                        android:fontFamily="@font/axiforma"
                        android:text="Degree"
                        android:textColor="#CBCBCB"
                        android:textSize="12dp">

                    </TextView>

                    <EditText
                        android:id="@+id/degree"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:background="@null"
                        android:fontFamily="@font/axiforma"
                        android:minHeight="50dp"
                        android:text=""
                        android:textColor="#000000"
                        android:textColorHint="#000000"
                        android:textSize="17dp">

                    </EditText>

                </FrameLayout>

                <android.widget.Button
                    android:id="@+id/buttonadd"
                    style="@style/buttonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/button_height"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:fontFamily="@font/nunito_semi_bold"
                    android:onClick="submit"
                    android:text="Add"
                    app:layout_constraintBottom_toTopOf="@+id/button2" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/axiforma"
                    android:text="Expertise"
                    android:textColor="#B7B7B7"
                    android:textSize="15dp" />

                <LinearLayout
                    android:id="@+id/expertise"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerexp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        tools:listitem="@layout/experiencerecycler" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/axiforma"
                    android:text="Add Experience"
                    android:textColor="#B7B7B7"
                    android:textSize="15dp" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/button_white">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:background="@null"
                        android:fontFamily="@font/axiforma"
                        android:text="Title"
                        android:textColor="#CBCBCB"
                        android:textSize="12dp">

                    </TextView>

                    <EditText
                        android:id="@+id/title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:background="@null"
                        android:fontFamily="@font/axiforma"
                        android:minHeight="50dp"
                        android:text=""
                        android:textColor="#000000"
                        android:textColorHint="#000000"
                        android:textSize="17dp">

                    </EditText>

                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/button_white">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:background="@null"
                        android:fontFamily="@font/axiforma"
                        android:text="Company name"
                        android:textColor="#CBCBCB"
                        android:textSize="12dp">

                    </TextView>

                    <EditText
                        android:id="@+id/companyname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:background="@null"
                        android:fontFamily="@font/axiforma"
                        android:minHeight="50dp"
                        android:text=""
                        android:textColor="#000000"
                        android:textColorHint="#000000"
                        android:textSize="17dp">

                    </EditText>

                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <CheckBox
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="20dp"
                        android:button="@drawable/checkbutton">

                    </CheckBox>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/axiforma"
                        android:text="I am currently studying here"
                        android:textColor="#626262"
                        android:textSize="11dp">

                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/button_white">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:background="@null"
                            android:fontFamily="@font/axiforma"
                            android:text="Start Date"
                            android:textColor="#CBCBCB"
                            android:textSize="12dp">

                        </TextView>

                        <EditText
                            android:id="@+id/startdate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:background="@null"
                            android:fontFamily="@font/axiforma"
                            android:inputType="date"
                            android:minHeight="50dp"
                            android:text="11-09-1998"
                            android:textColor="#000000"
                            android:textColorHint="#000000"
                            android:textSize="17dp">

                        </EditText>

                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/button_white">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:background="@null"
                            android:fontFamily="@font/axiforma"
                            android:text="End Date"
                            android:textColor="#CBCBCB"
                            android:textSize="12dp">

                        </TextView>

                        <EditText
                            android:id="@+id/enddate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:background="@null"
                            android:fontFamily="@font/axiforma"
                            android:inputType="date"
                            android:minHeight="50dp"
                            android:text="11-09-1998"
                            android:textColor="#000000"
                            android:textColorHint="#000000"
                            android:textSize="17dp">

                        </EditText>

                    </FrameLayout>
                </LinearLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/button_white">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:background="@null"
                        android:fontFamily="@font/axiforma"
                        android:text="Description"
                        android:textColor="#CBCBCB"
                        android:textSize="12dp">

                    </TextView>

                    <EditText
                        android:id="@+id/Description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:background="@null"
                        android:fontFamily="@font/axiforma"
                        android:minHeight="50dp"
                        android:text=""
                        android:textColor="#000000"
                        android:textColorHint="#000000"
                        android:textSize="17dp">

                    </EditText>

                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/button_white">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:background="@null"
                        android:fontFamily="@font/axiforma"
                        android:text="Degree"
                        android:textColor="#CBCBCB"
                        android:textSize="12dp">

                    </TextView>

                    <EditText
                        android:id="@+id/degree"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:background="@null"
                        android:fontFamily="@font/axiforma"
                        android:minHeight="50dp"
                        android:text=""
                        android:textColor="#000000"
                        android:textColorHint="#000000"
                        android:textSize="17dp">

                    </EditText>

                </FrameLayout>

                <android.widget.Button
                    android:id="@+id/buttonadde"
                    style="@style/buttonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/button_height"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:fontFamily="@font/nunito_semi_bold"
                    android:onClick="submit"
                    android:text="Add"
                    app:layout_constraintBottom_toTopOf="@+id/button2" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/axiforma"
                    android:text="Certificate"
                    android:textColor="#B7B7B7"
                    android:textSize="15dp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/certificates"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/certificates" />

                <ImageView
                    android:layout_width="67dp"
                    android:layout_height="96dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="50dp"
                    android:src="@drawable/certificate">

                </ImageView>

                <ImageView
                    android:layout_width="29dp"
                    android:layout_height="29dp"
                    android:src="@drawable/redcross"
                    android:layout_marginLeft="83dp"
                    android:layout_marginTop="-105dp">

                </ImageView>
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="130dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/button_white">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:background="@null"
                        android:fontFamily="@font/axiforma"
                        android:text="Description"
                        android:textColor="#CBCBCB"
                        android:textSize="12dp">

                    </TextView>

                    <EditText
                        android:id="@+id/desc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:background="@null"
                        android:fontFamily="@font/axiforma"
                        android:minHeight="50dp"
                        android:text=""
                        android:textColor="#000000"
                        android:textColorHint="#000000"
                        android:textSize="17dp">

                    </EditText>

                </FrameLayout>



            </LinearLayout>


            <android.widget.Button
                android:id="@+id/button"
                style="@style/buttonStyle"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="15dp"
                android:fontFamily="@font/nunito_semi_bold"
                android:onClick="submit"
                android:text="Update Profile"
                app:layout_constraintBottom_toTopOf="@+id/button2" />


        </LinearLayout>

    </LinearLayout>


</ScrollView>
