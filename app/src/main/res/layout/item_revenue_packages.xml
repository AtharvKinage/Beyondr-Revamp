<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:id="@+id/cardView1"
        android:layout_width="match_parent"
        android:background="@drawable/rectanglew"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="20dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:text="Package Name"
                        android:textSize="18dp"
                        android:textColor="#0D0D0D">
                    </TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Active for user"
                        android:textSize="11dp"
                        android:textColor="#00BFD9"
                        android:layout_marginLeft="10dp"
                        >

                    </TextView>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="230dp"
                        android:layout_height="wrap_content"
                        android:text="Digital (Video consultation)"
                        android:textColor="#919191"
                        android:textSize="13dp">

                    </TextView>
                    <TextView
                        android:id="@+id/price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$ 20"
                        android:textColor="@color/black"
                        android:textSize="25dp"
                        android:layout_marginTop="30dp">


                    </TextView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp">
                    <LinearLayout
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="11dp"
                            android:text="Validity (in months)"
                            android:textColor="#989898"
                            >
                        </TextView>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="11dp"
                            android:text="Number of appointments included"
                            android:textColor="#989898"
                            android:layout_marginTop="5dp">
                        </TextView>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="11dp"
                            android:text="Appointments taken"
                            android:textColor="#989898"
                            android:layout_marginTop="5dp">
                        </TextView>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="11dp"
                            android:text="Purchase Date"
                            android:textColor="#989898"
                            android:layout_marginTop="5dp">
                        </TextView>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="11dp"
                            android:text="Expiry date"
                            android:textColor="#989898"
                            android:layout_marginTop="5dp">
                        </TextView>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="11dp"
                            android:text=":"
                            android:textColor="#989898"
                            >
                        </TextView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="11dp"
                            android:text=":"
                            android:textColor="#989898"
                            android:layout_marginTop="5dp">
                        </TextView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="11dp"
                            android:text=":"
                            android:textColor="#989898"
                            android:layout_marginTop="5dp">
                        </TextView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="11dp"
                            android:text=":"
                            android:textColor="#989898"
                            android:layout_marginTop="5dp">
                        </TextView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="11dp"
                            android:text=":"
                            android:textColor="#989898"
                            android:layout_marginTop="5dp">
                        </TextView>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="5dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="11dp"
                            android:text="12"
                            android:textColor="#000000"
                            >
                        </TextView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="11dp"
                            android:text="12"
                            android:textColor="#000000"
                            android:layout_marginTop="5dp">
                        </TextView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="11dp"
                            android:text="3"
                            android:textColor="#000000"
                            android:layout_marginTop="5dp">
                        </TextView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="11dp"
                            android:text="11-11-12"
                            android:textColor="#000000"
                            android:layout_marginTop="5dp">
                        </TextView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="11dp"
                            android:text="11-11-12"
                            android:textColor="#000000"
                            android:layout_marginTop="5dp">
                        </TextView>

                    </LinearLayout>


                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="User Details"
                    android:textColor="@color/black"
                    android:textSize="17dp"
                    android:layout_marginTop="20dp">

                </TextView>
                <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/d"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_centerInParent="true"
                android:src="@drawable/docprofile"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                app:shapeAppearance="@style/Rounded"
                app:shapeAppearanceOverlay="@style/Rounded"
                />
            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Lorem Ipsum"
                    android:textSize="12dp"
                    android:textColor="#0D0D0D">
                </TextView>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">
                    <ImageView
                        android:layout_width="9.41dp"
                        android:layout_height="10.61dp"
                        android:src="@drawable/icondate"
                        >

                    </ImageView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="03/25/1982"
                        android:textColor="#969696"
                        android:textSize="8dp"
                        android:layout_marginLeft="5dp">

                    </TextView>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp">
                    <ImageView
                        android:layout_width="8.41dp"
                        android:layout_height="9.61dp"
                        android:src="@drawable/iconlocation"
                        >

                    </ImageView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rome, IT, 30828392"
                        android:textColor="#969696"
                        android:textSize="8dp"
                        android:layout_marginLeft="5dp">

                    </TextView>

                </LinearLayout>


            </LinearLayout>

            </LinearLayout>
                <android.widget.Button
                    style="@style/buttonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/button_height"
                    android:layout_above="@+id/button2"
                    android:layout_gravity="bottom"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="15dp"
                    android:fontFamily="@font/axiforma"
                    android:text="View appointment"
                    android:textSize="12dp"
                    />



        </LinearLayout>
        </LinearLayout>



    </FrameLayout>

</LinearLayout>