<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    app:cardCornerRadius="6dp"
    app:cardElevation="4dp"

    android:layout_margin="8dp"
    android:orientation="vertical">
    <FrameLayout
        android:id="@+id/cardView1"
        android:layout_width="match_parent"
        android:background="@drawable/roundedrectangle"
        android:layout_height="wrap_content"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="18dp"
                android:orientation="horizontal">



                <TextView
                    android:id="@+id/opName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="20dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="PACKAGE"
                    android:textColor="@color/white"
                    android:textSize="15sp">




                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_marginRight="30dp"
                    android:layout_alignParentRight="true"
                    android:fontFamily="@font/nunito_black"
                    android:gravity="end"
                    android:id="@+id/status"

                    android:text="EXPIRED"
                    android:textColor="@color/white"
                    android:textSize="12sp">


                </TextView>


            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/opValidity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginTop="12dp"
                    android:fontFamily="@font/axiforma"
                    android:text="Validity : 30 Days"
                    android:textColor="@android:color/white"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/opCat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"

                    android:layout_marginTop="12dp"
                    android:fontFamily="@font/axiforma"
                    android:text="Number of Appointments included : jasl"
                    android:textColor="@android:color/white"
                    android:textSize="13sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginTop="12dp"
                    android:id="@+id/numofappointused"

                    android:fontFamily="@font/axiforma"
                    android:text="Number of Appointments used : jasl"
                    android:textColor="@android:color/white"
                    android:textSize="13sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:id="@+id/date"
                    android:layout_marginTop="12dp"

                    android:fontFamily="@font/axiforma"
                    android:text="Package Purchase Date : jasl"
                    android:textColor="@android:color/white"
                    android:textSize="13sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginTop="12dp"
                    android:id="@+id/expiredate"

                    android:fontFamily="@font/axiforma"
                    android:text="Package Expiration Date : jasl"
                    android:textColor="@android:color/white"
                    android:textSize="13sp" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="12dp"
                android:paddingTop="12dp"
                android:layout_marginTop="8dp"
                android:paddingEnd="2dp"
                android:paddingBottom="12dp">

                <TextView
                    android:id="@+id/opPrice"
                    android:layout_width="wrap_content"
                      android:layout_marginLeft="20dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:layout_alignParentLeft="true"
                    android:fontFamily="@font/catamaran_medium"
                    android:gravity="center_vertical"
                    android:text="â‚¹ 1,999.00 "
                    android:layout_gravity="end"
                    android:textColor="@color/white"
                    android:textSize="18sp" />


                <androidx.cardview.widget.CardView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="12dp"
                    android:id="@+id/edit"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginBottom="2dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="4dp">

                    <TextView
                        android:id="@+id/viewPlan"
                        android:layout_gravity="end"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/top_left_right_rounded_grad_background"
                        android:fontFamily="@font/catamaran_bold"
                        android:gravity="center"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:text="VIEW TEAM"
                        android:textColor="@android:color/white"
                        android:textSize="13sp" />
                </androidx.cardview.widget.CardView>
            </RelativeLayout>
        </LinearLayout>
    </FrameLayout>
</androidx.cardview.widget.CardView>