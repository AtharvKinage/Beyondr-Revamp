<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Agora.Role.BroadCasterActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#00BCD4"

        android:fitsSystemWindows="true"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="20dp"
            android:id="@+id/back"
            android:layout_marginLeft="20dp"
            android:onClick="back"
            android:layout_height="20dp"
            android:foregroundGravity="center"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_baseline_arrow_back_24"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/activity_bg_color"
            android:textSize="20sp"
            android:layout_alignLeft="@+id/back"
            android:fontFamily="@font/montserrat_bold"
            android:layout_centerVertical="true"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="40dp"
            android:textStyle="bold"/>

    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:layout_margin="20dp"
        android:textStyle="bold"
        android:fontFamily="@font/montserrat_bold"
        android:textColor="@color/black"
        android:text="Broadcast Details : - "/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"

        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:layout_weight="1"
            android:textStyle="bold"
            android:fontFamily="@font/nunito_bold"
            android:textColor="@color/black"
            android:text="Topic"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:id="@+id/text"
            android:fontFamily="@font/nunito_bold"
            android:layout_weight="1"
            android:text="Name"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"

        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:layout_weight="1"
            android:textStyle="bold"
            android:fontFamily="@font/nunito_bold"
            android:textColor="@color/black"
            android:text="Description"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:id="@+id/description"
            android:fontFamily="@font/nunito_bold"
            android:layout_weight="1"
            android:text="Name"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"

        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:layout_weight="1"
            android:textStyle="bold"
            android:fontFamily="@font/nunito_bold"
            android:textColor="@color/black"
            android:text="Time"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:id="@+id/time"
            android:fontFamily="@font/nunito_bold"
            android:layout_weight="1"
            android:text="Name"/>
    </LinearLayout>
    <TextView
        android:id="@+id/viewPlan"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:background="@drawable/top_left_right_rounded_grad_background"
        android:fontFamily="@font/catamaran_bold"
        android:gravity="center"
        android:onClick="onStartBroadcastClicked"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:text="JOIN"
        android:textColor="@android:color/white"
        android:textSize="13sp" />

</LinearLayout>