<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_margin="3dp"
    app:cardCornerRadius="12dp"
    android:id="@+id/card"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/profile_image"
                    android:layout_width="120dp"
                    android:layout_height="204dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/dimage"
                    app:shapeAppearance="@style/Rounded3"
                    app:shapeAppearanceOverlay="@style/Rounded3"
                    app:civ_border_color="#978888"
                    app:civ_border_width="1dp"
                   />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16dp"
                        android:textColor="#222222"
                        android:fontFamily="@font/axiforma"
                        android:textFontWeight="400"
                        android:id="@+id/name"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="1"
                        android:text="Dr Brain Hayer"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/stars"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="11dp"
                        android:layout_marginLeft="20dp"
                        android:fontFamily="@font/axiforma"
                        android:id="@+id/location"
                        android:layout_weight="1"
                        android:layout_marginTop="5dp"
                        android:text="Speciality"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="11dp"
                        android:fontFamily="@font/axiforma"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:layout_marginTop="5dp"
                        android:text="since"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="11dp"
                        android:fontFamily="@font/axiforma"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:layout_marginTop="5dp"
                        android:text="year"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="11dp"
                        android:fontFamily="@font/axiforma"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:layout_marginTop="5dp"
                        android:text="in"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="11dp"
                        android:fontFamily="@font/axiforma"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:layout_marginTop="5dp"
                        android:text="Hospital Name"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:paddingTop="30dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="77dp"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/axiforma"
                        android:textColor="#9093A3"
                        android:text="Specialization"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:fontFamily="@font/axiforma"
                        android:id="@id/aaa"
                        android:layout_weight="1"
                        android:text="Name"
                        android:textColor="#0F0F0F"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/axiforma"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="77dp"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/axiforma"
                        android:textColor="#9093A3"
                        android:text="Insurance"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:fontFamily="@font/axiforma"
                        android:id="@id/aboutandeducation"
                        android:layout_weight="1"
                        android:text="Name"
                        android:textColor="#0F0F0F"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="77dp"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/axiforma"
                        android:textColor="#9093A3"
                        android:text="Clinic Address"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:fontFamily="@font/axiforma"
                        android:id="@id/aa"
                        android:layout_weight="1"
                        android:text="Name"
                        android:textColor="#0F0F0F"/>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="26dp"
                            android:layout_height="26dp"
                            android:layout_marginLeft="20dp"
                            android:id="@+id/messageimage"
                            android:layout_marginTop="4dp"
                            android:background="@drawable/iconappointment"
                            android:src="@drawable/iconappointmentsrc"
                            android:scaleType="centerInside"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Appointment"
                            android:textSize="5dp"
                            android:fontFamily="@font/axiforma"
                            android:textColor="#0F0F0F"
                            android:layout_marginLeft="17dp">

                        </TextView>


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/bookmyappointment"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="26dp"
                            android:layout_height="26dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="4dp"
                            android:background="@drawable/iconappointment"
                            android:src="@drawable/iconmessagesrc"
                            android:scaleType="centerInside"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Message"
                            android:textSize="5dp"
                            android:fontFamily="@font/axiforma"
                            android:textColor="#0F0F0F"
                            android:layout_marginLeft="22dp">

                        </TextView>



                    </LinearLayout>
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="100dp"
                        android:layout_weight="1"
                        android:padding="10dp"
                        android:layout_gravity="end"
                        android:backgroundTint="@color/blue"
                        app:cardCornerRadius="14dp"
                        android:layout_height="26dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="8dp"
                            android:layout_gravity="center"
                            android:fontFamily="@font/nunito_bold"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:text="View Full Profile"/>
                    </com.google.android.material.card.MaterialCardView>


                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="2dp"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:text="About"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:layout_marginLeft="20dp"
                    android:id="@+id/about"
                    android:layout_marginTop="2dp"
                    android:layout_weight="1"
                    android:text="About"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="2dp"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:text="Experience"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="2dp"
                    android:id="@+id/experience"
                    android:layout_weight="1"
                    android:text="About"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="2dp"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:text="Education"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="2dp"
                    android:id="@+id/education"
                    android:layout_weight="1"
                    android:text="About"/>


            </LinearLayout>


        </com.google.android.material.card.MaterialCardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        </LinearLayout>
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>