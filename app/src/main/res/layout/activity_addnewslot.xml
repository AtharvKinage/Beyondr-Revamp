<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_height="60dp">

        <ImageView
            android:id="@+id/back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:onClick="back"
            android:src="@drawable/leftarrow" />

        <TextView
            android:layout_width="122dp"
            android:layout_height="27dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="60dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/nunito_bold"
            android:text="Messages"

            android:textColor="#222222"
            android:textSize="20dp"
            android:textStyle="bold" />
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/axiforma"
        android:text="Consult time (In minutes)"
        android:textColor="#B7B7B7"
        android:textSize="13dp"

        />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/button_white"
        android:elevation="1dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:background="@null"
            android:fontFamily="@font/axiforma"
            android:minHeight="50dp"
            android:textColor="#000000"
            android:textColorHint="#000000"
            android:textSize="17dp">

        </EditText>

    </FrameLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/axiforma"
                android:text="Start time"
                android:textColor="#B7B7B7"
                android:textSize="13dp"

                />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/button_white"
                android:elevation="1dp">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:background="@null"
                    android:fontFamily="@font/axiforma"
                    android:minHeight="50dp"
                    android:textColor="#000000"
                    android:textColorHint="#000000"
                    android:textSize="17dp">

                </EditText>

            </FrameLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/axiforma"
                android:text="End time"
                android:textColor="#B7B7B7"
                android:textSize="13dp"

                />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/button_white">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:background="@null"
                    android:fontFamily="@font/axiforma"
                    android:inputType="phone"
                    android:minHeight="50dp"
                    android:textColor="#000000"
                    android:textColorHint="#000000"
                    android:textSize="17dp">

                </EditText>

            </FrameLayout>


        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/axiforma"
        android:text="Slots availability"
        android:textColor="#B7B7B7"
        android:textSize="13dp"

        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:weightSum="7"
        >
        <com.google.android.material.card.MaterialCardView
            android:padding="10dp"
            android:layout_width="44dp"
            android:orientation="vertical"
            android:layout_height="47dp"
            app:strokeWidth="1dp"
            app:strokeColor="@color/grey"
            app:cardCornerRadius="15dp"
            android:layout_weight="1"
            >
            <TextView
                android:layout_width="wrap_content"
                android:fontFamily="@font/axiforma"
                android:textColor="@color/black"
                android:layout_height="wrap_content"
                android:text="Sun"
                android:layout_gravity="center"
                android:textSize="10dp"/>
        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            android:padding="10dp"
            android:layout_width="44dp"
            android:orientation="vertical"
            android:layout_height="47dp"

            app:strokeColor="@color/grey"
            app:cardCornerRadius="15dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            card_view:cardBackgroundColor="#00BFD9"
            >
            <TextView
                android:layout_width="wrap_content"
                android:fontFamily="@font/axiforma"
                android:textColor="@color/white"
                android:layout_height="wrap_content"
                android:text="Mon"
                android:layout_gravity="center"
                android:textSize="10dp"/>
        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            android:padding="10dp"
            android:layout_width="44dp"
            android:orientation="vertical"
            android:layout_height="47dp"
            app:strokeColor="@color/grey"
            app:cardCornerRadius="15dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            card_view:cardBackgroundColor="#00BFD9"
            >
            <TextView
                android:layout_width="wrap_content"
                android:fontFamily="@font/axiforma"
                android:textColor="@color/white"
                android:layout_height="wrap_content"
                android:text="Tue"
                android:layout_gravity="center"
                android:textSize="10dp"/>
        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            android:padding="10dp"
            android:layout_width="44dp"
            android:orientation="vertical"
            android:layout_height="47dp"
            app:strokeColor="@color/grey"
            app:cardCornerRadius="15dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            card_view:cardBackgroundColor="#00BFD9"
            >
            <TextView
                android:layout_width="wrap_content"
                android:fontFamily="@font/axiforma"
                android:textColor="@color/white"
                android:layout_height="wrap_content"
                android:text="Wed"
                android:layout_gravity="center"
                android:textSize="10dp"/>
        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            android:padding="10dp"
            android:layout_width="44dp"
            android:orientation="vertical"
            android:layout_height="47dp"
            card_view:cardBackgroundColor="#00BFD9"
            app:strokeColor="@color/grey"
            app:cardCornerRadius="15dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:fontFamily="@font/axiforma"
                android:textColor="@color/white"
                android:layout_height="wrap_content"
                android:text="Thu"
                android:layout_gravity="center"
                android:textSize="10dp"/>
        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            android:padding="10dp"
            android:layout_width="44dp"
            android:orientation="vertical"
            android:layout_height="47dp"
            card_view:cardBackgroundColor="#00BFD9"
            app:strokeColor="@color/grey"
            app:cardCornerRadius="15dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:fontFamily="@font/axiforma"
                android:textColor="@color/white"
                android:layout_height="wrap_content"
                android:text="Fri"
                android:layout_gravity="center"
                android:textSize="10dp"/>
        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            android:padding="10dp"
            android:layout_width="44dp"
            android:orientation="vertical"
            android:layout_height="47dp"
            card_view:cardBackgroundColor="#00BFD9"
            app:strokeColor="@color/grey"
            app:cardCornerRadius="15dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:fontFamily="@font/axiforma"
                android:textColor="@color/white"
                android:layout_height="wrap_content"
                android:text="Sat"
                android:layout_gravity="center"
                android:textSize="10dp"/>
        </com.google.android.material.card.MaterialCardView>


    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/axiforma"
        android:text="Type of consultation"
        android:textColor="#B7B7B7"
        android:textSize="13dp"
        />
    <RadioGroup
        android:id="@+id/typesofconsultation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        >

        <RadioButton
            android:id="@+id/radioDirect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@drawable/customradio"
            android:checked="true"
            android:fontFamily="@font/axiforma"
            android:text="Direct Booking"
            android:padding="10dp"
            />

        <RadioButton
            android:id="@+id/radioVideo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@drawable/customradio"
            android:fontFamily="@font/axiforma"
            android:text="Video Booking"
            android:padding="10dp"/>

        <RadioButton
            android:id="@+id/radiodirectvideo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@drawable/customradio"
            android:fontFamily="@font/axiforma"
            android:text="@string/direct_booking_video_booking"
            android:padding="10dp"/>
    </RadioGroup>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/axiforma"
        android:text="Consulting Fees"
        android:textColor="#B7B7B7"
        android:textSize="13dp"
        />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/button_white"
        android:elevation="1dp"
        >

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:background="@null"
            android:fontFamily="@font/axiforma"
            android:minHeight="50dp"
            android:textColor="#000000"
            android:textColorHint="#000000"
            android:textSize="17dp"
            android:hint="₹">

        </EditText>

    </FrameLayout>
    <android.widget.Button
        android:id="@+id/button"
        app:style="@style/buttonStyle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:fontFamily="@font/axiforma"
        android:text="Save"
        />

    </LinearLayout>

</ScrollView>
