<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="4dp"
    android:id="@+id/materialcardview"
    android:layout_height="wrap_content">
    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width='125dp'
            android:layout_marginTop="10dp"
            android:layout_height='75dp'
            app:shapeAppearance="@style/Rounded"
            android:layout_margin="4dp"
            android:id="@+id/communityimage"
            style="@style/Rounded"
            app:shapeAppearanceOverlay="@style/Rounded"
            android:scaleType='fitXY'
            android:src='@drawable/slide' />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="4dp"
            android:orientation="vertical">
            <TextView
                android:textSize="11dp"
                android:layout_width="wrap_content"
                android:textColor="@color/black"
                android:fontFamily="@font/axiforma"
                android:layout_height="wrap_content"
                android:id="@+id/text"
                android:text="Workplace Anxiety: Causes, fear Symptoms, and Treatment"/>

           <LinearLayout
               android:layout_marginTop="10dp"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">

               <com.google.android.material.imageview.ShapeableImageView
                   android:layout_width="27dp"
                   android:layout_height="27dp"
                   android:elevation="0dp"
                   android:src='@drawable/upcoming'
                   app:shapeAppearance="@style/Rounded"/>

               <LinearLayout
                   android:layout_marginLeft="10dp"
                   android:layout_width="wrap_content"
                   android:layout_height="match_parent"
                   android:orientation="vertical">

                   <TextView
                       android:textSize="8dp"
                       android:layout_marginBottom="5dp"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Anthony Coleman"/>

                   <TextView
                       android:textSize="8dp"
                       android:textColor="#000000"
                       android:textStyle="bold"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Urology"/>

               </LinearLayout>

               <ImageView
                   android:gravity="right"
                   android:layout_marginLeft="20dp"
                   android:layout_width="15dp"
                   android:layout_height="15dp"
                   android:src="@drawable/clock"/>

               <TextView
                   android:gravity="right"
                   android:layout_gravity="right"
                   android:layout_marginLeft="10dp"
                   android:textSize="8dp"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Jun 10, 13:02"/>
           </LinearLayout>

</LinearLayout>
    </LinearLayout>
</LinearLayout>