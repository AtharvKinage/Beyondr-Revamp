<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    app:cardCornerRadius="6dp"
    app:cardElevation="4dp"

    android:layout_margin="8dp"
    android:orientation="vertical">
    <FrameLayout
        android:id="@+id/cardView1"
        android:layout_width="match_parent"
        android:background="@drawable/rectanglew"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:id="@+id/framelayout"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/axiforma"
                        android:textColor="#525252"
                        android:layout_height="wrap_content"
                        android:text="Feb"
                        android:textSize="20dp"
                        android:id="@+id/day"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/axiforma"
                        android:textColor="#525252"
                        android:text="09"
                        android:id="@+id/date"
                        android:textSize="15dp"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center"
                        />
                </LinearLayout>
                <View
                    android:layout_width="0.5dp"
                    android:layout_height="56dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:background="#EAEAEA"
                    >
                </View>
                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/profile_image"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/prof"
                    app:shapeAppearance="@style/Rounded3"
                    app:shapeAppearanceOverlay="@style/Rounded3"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="30dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dr. Brandon Reid"
                        android:textSize="22dp"
                        android:textColor="#0D0D0D">
                    </TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="GYM Trainer"
                        android:textColor="#919191"
                        android:textSize="17dp">

                    </TextView>

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">
                <LinearLayout
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16dp"
                        android:text="Duration"
                        android:textColor="#989898"
                        >
                    </TextView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16dp"
                        android:text="Start time"
                        android:textColor="#989898"
                        android:layout_marginTop="5dp">
                    </TextView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16dp"
                        android:text="Date"
                        android:textColor="#989898"
                        android:layout_marginTop="5dp">
                    </TextView>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16dp"
                        android:text=":"
                        android:textColor="#989898"
                        >
                    </TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16dp"
                        android:text=":"
                        android:textColor="#989898"
                        android:layout_marginTop="5dp">
                    </TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16dp"
                        android:text=":"
                        android:textColor="#989898"
                        android:layout_marginTop="5dp">
                    </TextView>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="20dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16dp"
                        android:text="02:00 hrs"
                        android:textColor="#000000"
                        >
                    </TextView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16dp"
                        android:text="12:45 p.m"
                        android:textColor="#000000"
                        android:layout_marginTop="5dp">
                    </TextView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16dp"
                        android:text="08:11 p.m"
                        android:textColor="#000000"
                        android:layout_marginTop="5dp">
                    </TextView>

                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$ 20"
                    android:textSize="30dp"
                    android:textColor="#000000"
                    android:layout_gravity="bottom">

                </TextView>

            </LinearLayout>
            <android.widget.Button
                style="@style/buttonStyle"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/axiforma"
                android:text="Prescription"
                />

        </LinearLayout>

    </FrameLayout>
</androidx.cardview.widget.CardView>