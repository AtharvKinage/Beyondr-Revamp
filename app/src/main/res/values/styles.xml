<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="BtnStyle" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/blue</item>
        <item name="cornerRadius">@dimen/btn_radius</item>
        <item name="android:layout_height">@dimen/btn_height</item>
    </style>
    <!--Main button-->
    <style name="buttonStyle" parent="android:Widget.Button">
        <item name="android:layout_marginLeft">@dimen/app_padding</item>
        <item name="android:layout_marginRight">@dimen/app_padding</item>
        <item name="android:background">@drawable/button_blue</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16dp</item>
    </style>



    <!--gray button-->
    <style name="grayButton" parent="buttonStyle">
        <item name="android:background">@drawable/button_gray</item>
    </style>

    <!--titleStyle-->
    <style name="titleStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">16dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!--subtitle-->
    <style name="subtitle" parent="titleStyle">
        <item name="android:textSize">14dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/darkGray</item>
    </style>
    <style name="TitleTextStyle">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="cardViewStyle" >
        <item name="cardCornerRadius">8dp</item>
        <item name="android:foreground">?selectableItemBackground</item>
        <item name="cardElevation">4dp</item>
        <item name="cardBackgroundColor">@color/white</item>
    </style>

    <style name="categoryHeadingTextStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_heading">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="text_value_heading">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/blue</item>
    </style>


    <style name="text_radio_button_answer">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="buttonTint">@color/blue</item>
    </style>
    <style name="AutoCompleteEditTextLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense.ExposedDropdownMenu">
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="boxBackgroundColor">@color/edittext_bg</item>
        <item name="boxCornerRadiusTopStart">@dimen/edit_text_corner_radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/edit_text_corner_radius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/edit_text_corner_radius</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/edit_text_corner_radius</item>
        <item name="android:editTextColor">@color/black</item>
    </style>

    <style name="EditTextLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="boxBackgroundColor">@color/edittext_bg</item>
        <item name="boxCornerRadiusTopStart">@dimen/edit_text_corner_radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/edit_text_corner_radius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/edit_text_corner_radius</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/edit_text_corner_radius</item>
        <item name="android:editTextColor">@color/black</item>

    </style>

    <style name="EditTextInputStyle" parent="Widget.AppCompat.EditText">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="hintTextColor">@color/hint_text_color</item>
    </style>
    <style name="tab_text" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/calibri</item>
        <item name="android:textSize">16sp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="mychip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipCornerRadius">4dp</item>
        <item name="chipMinHeight">50dp</item>
    </style>

    <style name="CustomTab" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/tab_text</item>
    </style>

    <style name="SearchView" parent="">
        <item name="android:editTextColor">@color/dark_late_gray</item>
        <item name="android:textColorHint">@android:color/darker_gray</item>
        <item name="android:textSize">16sp</item>
        <item name="tint">#00BFD9</item>
    </style>

    <style name="Rounded">
        <item name="cornerSize">20%</item>
    </style>
    <style name="Rounded2">
        <item name="cornerSize">10%</item>
    </style>
    <style name="Rounded3">
        <item name="cornerSize">20%</item>
    </style>

</resources>